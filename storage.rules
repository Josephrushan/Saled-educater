rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return request.auth.token.email == 'info@visualmotion.co.za';
    }

    // --- CRM PATHS (Public Access for Sales Team) ---
    
    // Allow read/write for Educater Sales CRM
    // Profile pictures for sales reps
    match /profile_pics/{allPaths=**} {
      allow read, write: if true;  // Public read/write for custom auth app
    }
    
    match /profile_pictures/{allPaths=**} {
      allow read: if true;  // Public read for displaying profile pictures
      allow write: if true;  // Allow writes
    }
    
    // Bank proofs for sales reps
    match /bank_proofs/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Resources (training materials, tools)
    match /resources/{allPaths=**} {
      allow read, write: if true;
    }

    // --- SCHOOL APP PATHS (Firebase Auth) ---

    // School logos - Authenticated users can upload
    match /schools/{schoolId}/logo {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // User avatars and profiles
    match /users/{userId}/avatar {
      allow read: if true;
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }
    
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }
    
    match /users/{userId}/cover/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // General user files
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // General uploads
    match /uploads/{userId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // Assignments
    match /assignments/{assignmentId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}