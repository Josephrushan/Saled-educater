rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'info@visualmotion.co.za';
    }

    // Check if this is a CRM operation (no Firebase Auth, uses custom Firestore auth)
    function isCRMOperation() {
      return request.auth == null;
    }

    // Safely fetches the current authenticated user's profile data (for school app)
    function getAuthUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isParent() {
      return isSignedIn() && getAuthUserData().role == 'Parent';
    }

    function isStaff() {
      let role = getAuthUserData().role;
      return role == 'Teacher' || role == 'Principal';
    }

    function mySchoolId() {
      return getAuthUserData().schoolId;
    }

    // --- NEW APP COLLECTIONS (Educater Sales CRM) ---
    
    // Allow public read/write for the sales team app (since it uses custom auth)
    match /educater_salesman/{document} {
      allow read, write: if true; 
    }

    match /sales_artillery/{document} {
      allow read, write: if true; 
    }

    match /training_academy/{document} {
      allow read, write: if true; 
    }

    match /resource_categories/{document} {
      allow read, write: if true;
    }

    match /email_templates/{document} {
      allow read, write: if true;
    }

    // --- SHARED COLLECTIONS (Used by both CRM and School App) ---

    // 1. SCHOOLS
    // CRM can create schools, School app staff can manage their own schools
    match /schools/{schoolId} {
      allow read: if true;
      // Allow CRM operations (no auth) and super admin
      allow write: if isCRMOperation() || isSuperAdmin(); 
      
      match /config/{configId} {
        allow read: if isSignedIn() && (mySchoolId() == schoolId || isSuperAdmin());
        allow write: if isSignedIn() && (isStaff() && mySchoolId() == schoolId || isSuperAdmin());
      }
    }

    // --- SCHOOL APP ONLY COLLECTIONS ---

    // 2. USERS
    match /users/{userId} {
      allow read: if true;
      allow create: if 
        // CRM can create principals for schools it manages
        (isCRMOperation() && request.resource.data.role == 'Principal' && request.resource.data.source == 'crm') ||
        // School app - requires Firebase Auth
        isSignedIn();
      allow update: if isSignedIn() && (
        request.auth.uid == userId || 
        isSuperAdmin() || 
        (resource.data.role == 'Student' && resource.data.parentId == request.auth.uid)
      );
      allow delete: if isSuperAdmin();
    }

    // 3. ANNOUNCEMENTS (Staff Bulletin)
    match /announcements/{id} {
      allow read: if isSignedIn() && (isStaff() && (resource == null || resource.data.schoolId == mySchoolId()) || isSuperAdmin());
      allow write: if isSignedIn() && (isStaff() && (request.resource.data.schoolId == mySchoolId() || resource.data.schoolId == mySchoolId()) || isSuperAdmin());
    }

    // 4. ACADEMICS (Assignments & Resources)
    match /assignments/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create, delete: if isSignedIn() && (isStaff() && (request.resource.data.schoolId == mySchoolId() || resource.data.schoolId == mySchoolId()) || isSuperAdmin());
      allow update: if isSignedIn() && (
        (isStaff() && (request.resource.data.schoolId == mySchoolId() || resource.data.schoolId == mySchoolId())) ||
        (!isStaff()) ||
        isSuperAdmin()
      );
    }

    match /resources/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create, update, delete: if isSignedIn() && (isStaff() && (request.resource.data.schoolId == mySchoolId() || resource.data.schoolId == mySchoolId()) || isSuperAdmin());
    }

    // 5. COMMUNITY FEED (Chat)
    match /messages/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create: if isSignedIn() && (getAuthUserData().role != 'Student' && request.resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow delete: if isSignedIn() && (isStaff() || resource.data.senderId == request.auth.uid || isSuperAdmin());
    }

    // INBOX: Conversations & Direct Messages
    match /conversations/{id} {
      allow get: if isSignedIn();
      allow list, update, delete: if isSignedIn() && (request.auth.uid in resource.data.participants || isSuperAdmin());
      allow create: if isSignedIn() && (request.auth.uid in request.resource.data.participants || isSuperAdmin());
    }

    match /direct_messages/{id} {
      allow get: if isSignedIn() && (resource == null || request.auth.uid in resource.data.participants || isSuperAdmin());
      allow list: if isSignedIn() && (request.auth.uid in resource.data.participants || isSuperAdmin());
      allow create: if isSignedIn() && (request.auth.uid in request.resource.data.participants || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }

    // 6. ALERTS (Absence & Health)
    match /alerts/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create: if isSignedIn() && (isStaff() || isSuperAdmin());
      allow update: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow delete: if isSignedIn() && (isStaff() || isSuperAdmin());
    }

    // 7. MEMORIES (Yearbook & Journal)
    match /yearbook/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create: if isSignedIn() && (isStaff() || isSuperAdmin());
      allow update: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow delete: if isSignedIn() && (isStaff() || isSuperAdmin());
    }

    // 8. CALENDAR
    match /events/{id} {
      allow read: if isSignedIn() && (resource.data.schoolId == mySchoolId() || isSuperAdmin());
      allow create, update, delete: if isSignedIn() && (isStaff() || isSuperAdmin());
    }

    // 9. PUSH NOTIFICATIONS
    match /pushSubscriptions/{subscriptionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isSuperAdmin());
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || isSuperAdmin());
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isSuperAdmin());
    }

    match /users/{userId}/pushSubscriptions/{subscriptionId} {
      allow read: if isSignedIn() && (resource == null || request.auth.uid == userId || isSuperAdmin());
      allow create: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // GLOBAL FALLBACK (Preserved from original rules)
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
